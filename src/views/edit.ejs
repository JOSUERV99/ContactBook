<%- include('partials/_header') %>
<div class="cold-md-5">
    <a href="/" class="btn btn-danger btn-block">Cancel</a>
    <div class="card">
        <div class="card-body" style="padding: 15px; margin: 10px;">
            <form action="/update/<%= contact._id %>" method="POST">
            <div>
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= contact.name %>" placeholder="Insert a name">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="lastname" value="<%= contact.lastname %>" placeholder="Insert a lastname">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="email" value="<%= contact.email %>" placeholder="Insert an email">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="phonenumber" value="<%= contact.phonenumber %>" placeholder="Insert a phone number">
                </div>
            </div>
            <div class="" style="padding-top:10px;">
                <button type="submit" class="btn btn-primary btn-block">Add new contact</button>
            </div>
            </form>
        </div>
    </div>
</div>
<%- include('partials/_footer') %>